<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/background_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:background="@drawable/small_bg" />

    <ImageView
        android:id="@+id/background_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background_iv"
        android:layout_alignRight="@+id/background_iv"
        android:layout_margin="4dip"
        android:background="@drawable/background_pisotion" 
        android:visibility="gone"/>

</RelativeLayout>