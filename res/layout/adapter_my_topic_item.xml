<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp" >

    <com.edaoyou.collections.view.CirclePortrait
        android:id="@+id/topic_avatar_iv"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/search_persion_head"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/topic_avatar_iv" >

        <TextView
            android:id="@+id/topic_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/topic_txt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic_name_tv"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="3dip"
            android:ellipsize="end"
            android:maxLength="15"
            android:maxLines="1"
            android:text="关注了你"
            android:textColor="@color/gray_text"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/topic_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:text="1天之前"
        android:textColor="@color/gray_text"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/topic_avatar_iv"
        android:background="@color/gray_line" />

</RelativeLayout>