<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/dialog_chat_read_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:text="标为已读"
        android:textSize="18sp" />

    <View
        android:id="@+id/dialog_chat_line1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/dialog_chat_read_tv"
        android:background="@color/gray_line"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" />

    <TextView
        android:id="@+id/dialog_top_chat_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_chat_line1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:text="置顶聊天"
        android:textSize="18sp" />

    <View
        android:id="@+id/dialog_chat_line2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/dialog_top_chat_tv"
        android:background="@color/gray_line"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" />

    <TextView
        android:id="@+id/dialog_chat_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_chat_line2"
        android:gravity="center"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:text="取消"
        android:textColor="@color/blue"
        android:textSize="18sp" />

</RelativeLayout>