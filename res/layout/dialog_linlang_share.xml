<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="15dip"
    android:paddingTop="15dip" >

    <TextView
        android:id="@+id/linlang_share_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:text="分享到"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linlang_shere_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linlang_share_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <ImageView
            android:id="@+id/linlang_share_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:background="@drawable/share_weixin" />

        <ImageView
            android:id="@+id/linlang_share_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:background="@drawable/share_friends" />

        <ImageView
            android:id="@+id/linlang_share_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:background="@drawable/share_weibo" />

        <ImageView
            android:id="@+id/linlang_share_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:background="@drawable/share_qq" />
    </LinearLayout>

    <View
        android:id="@+id/linlang_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/linlang_shere_ll"
        android:background="@color/gray_line" />

    <LinearLayout
        android:id="@+id/linlang_report_ll"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@id/linlang_dialog_line"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/linlang_report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_report"
            android:textColor="#F55B60"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="15dip"
            android:background="@color/gray_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_below="@id/linlang_report_ll"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/blue"
        android:textSize="18sp" />

</RelativeLayout>